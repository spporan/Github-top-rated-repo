<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="@dimen/common_margin"
        android:layout_marginBottom="@dimen/common_padding_medium"
        app:cardCornerRadius="@dimen/repo_card_corner_radius"
        app:cardElevation="4dp"
        app:cardBackgroundColor="?appCardBackgroundColor"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/common_padding_medium"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/profile_image_size"
                android:layout_height="@dimen/profile_image_size"
                app:srcCompat="@drawable/ic_launcher_background"
                android:id="@+id/profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/RoundImageShape"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingHorizontal="@dimen/common_padding_medium"
                android:textSize="@dimen/primary_text_size"
                app:layout_constraintBottom_toBottomOf="@id/profile"
                tools:text="rishabhbhatia/react-native-awesome-alerts"
                app:layout_constraintStart_toEndOf="@+id/profile"
                app:layout_constraintTop_toTopOf="@+id/profile"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:maxLines="5"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/common_padding_medium"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/black"
                android:paddingHorizontal="@dimen/common_padding_medium"
                android:textSize="@dimen/primary_text_size"
                tools:text="A fully functional Android app built entirely with Kotlin and Jetpack Compose. This monorepo stores all code and assets of all projects with which we develop regels.overheid.nl"
                app:layout_constraintStart_toStartOf="@id/profile"
                app:layout_constraintTop_toBottomOf="@id/profile"
                app:layout_constraintStart_toEndOf="parent"
                />
            <View
                android:layout_width="@dimen/lang_view_size"
                android:layout_height="@dimen/lang_view_size"
                android:id="@+id/langPlaceholder"
                android:background="@drawable/round_background"
                app:layout_constraintStart_toStartOf="@id/profile"
                android:layout_marginTop="@dimen/common_margin"
                app:layout_constraintTop_toBottomOf="@+id/description"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/langName"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/secondary_text_size"
                tools:text="Kotlin"
                android:paddingEnd="@dimen/common_margin"
                android:paddingStart="@dimen/common_padding_small"
                app:layout_constraintStart_toEndOf="@+id/langPlaceholder"
                app:layout_constraintTop_toTopOf="@id/langPlaceholder"
                app:layout_constraintBottom_toBottomOf="@id/langPlaceholder"
                />

            <ImageView
                android:layout_width="@dimen/star_view_size"
                android:layout_height="@dimen/star_view_size"
                android:id="@+id/startPlaceHolder"
                android:background="@drawable/ic_baseline_star_border_24"
                android:layout_marginTop="@dimen/common_margin"
                app:layout_constraintStart_toEndOf="@id/langName"
                app:layout_constraintTop_toBottomOf="@+id/description"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/starCount"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/secondary_text_color"
                android:paddingHorizontal="@dimen/common_padding_small"
                android:textSize="@dimen/secondary_text_size"
                tools:text="5.3k"
                app:layout_constraintStart_toEndOf="@+id/startPlaceHolder"
                app:layout_constraintTop_toTopOf="@id/startPlaceHolder"
                app:layout_constraintBottom_toBottomOf="@id/startPlaceHolder"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>