<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Githubtopratedrepo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorAccent">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/teal_700</item> <!-- this is needed for statusBar color -->
        <item name="android:navigationBarColor" >@color/background_light</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_light</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/background_light</item>
        <item name="appCardBackgroundColor">@color/card_color_light</item>
        <item name="primaryTextColor">@color/black</item>

    </style>

    <style name="Theme.Githubtopratedrepo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Githubtopratedrepo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Githubtopratedrepo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>